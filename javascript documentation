   id: 1,
   name: "Aaron",
   gender: "male"
 },
 
 {
   id: 2,
   name: "John",
   gender: "male"
 },
 
 {
   id: 3,
   name: "Bucky",
   gender: "male"
 }
];
 
 
//returns ID
const personDetails = person.map(function(details) {
   return details.id;
});
 
const personDetailsTwo = person.map(function(detailsTwo) {
   return detailsTwo.name;
});
 
console.log(personDetails);
console.log(personDetailsTwo[0]);
 
