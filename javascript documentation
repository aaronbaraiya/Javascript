const tenthGraders = [
 {
   id: 324154,
   grade: 11,
   gender: "male"
 },
 
 {
   id: 21211,
   grade: 10,
   gender: "other"
 }
];
 
function receiveID() {
 const idenNum = tenthGraders[0].id;
 
 return idenNum;
}
 
function ID() {
 const secIdenNum = tenthGraders[1].id;
 
 return secIdenNum;
}
 
 
tenthGraders.forEach(function(students) {
 console.log(receiveID());
 console.log(ID());
});


