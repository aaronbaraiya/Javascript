// javascript
 
function text(words) {
   return (words.substring(0,5));
}
 
function textTwo(wordsTwo) {
   return (wordsTwo.split(" ",1));
}
 
console.log(text("Aaron"));
console.log(textTwo("Aaron Joshua Baraiya"));                                                                                                                                         



 
