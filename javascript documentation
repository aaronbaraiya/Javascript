        teachers: 91
    },

    {
        school: 3,
        students: 248,
        teachers: 57
    },

    {
        school: 4,
        students: 327,
        teachers: 77
    }
];

schoolInformation.forEach(function(numOfStudents) {
    console.log("Number of students: ");
    console.log(numOfStudents.students);
});
